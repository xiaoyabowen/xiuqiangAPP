<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no"/>
    <title>个人介绍</title>
    <link rel="stylesheet" type="text/css" href="../../css/commonWindow.css">
    <link rel="stylesheet" type="text/css" href="../../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="../../css/mui.min.css">
    <style>
        .bg-box{
            width:100%;
            background:#fff;
            padding-top: 20px;
            padding-bottom: 18px;
        }
        .textbox{
            width:90%;
            margin:0 5% 0;
            min-height:184px;
            border: 1px solid #D7D7D7;
            border-radius: 4px;
        }
        .textbox textarea{
            margin:12px 0 0 5%;
            width:90%;
            height: 184px;
            font-family: PingFangSC-Regular;
            font-size: 14px;
            color: #999999;
            letter-spacing: 0.19px;
            padding:0;
            min-height: 96px;
            border:none;
        }
        .btnbox{
            width:90%;
            margin:20px 5% 0;
            height:44px;
            line-height: 44px;
            text-align: center;
            background: #5AC8E1;
            box-shadow: 0 2px 4px 0 rgba(90,200,225,0.30);
            border-radius: 4px;
            font-family: PingFangSC-Regular;
            font-size: 16px;
            color: #FFFFFF;
            letter-spacing: 0.22px;
        }
    </style>
</head>
<body style="background:#ebf0f3;">
    <div style="width:100%;height:12px;background:#ebf0f3;">

    </div>
    <div class="bg-box">
        <div class="textbox">
            <textarea placeholder="输入您的个人介绍" id="text-box" onfocus="lst(this)"></textarea>
        </div>
    </div>
    <div class="btnbox" onclick="refer()" id="but">
        确定
    </div>
</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/jquery-1.8.1.min.js"></script>
<script type="text/javascript" src="../../script/mui.min.js"></script>
<script type="text/javascript" src="../../script/template-native.js"></script>
<script type="text/javascript" src="../../script/kv.js"></script>
<script type="text/javascript" src="../../script/user.js"></script>
<script type="text/javascript" src="../../script/data.js"></script>
<script type="text/javascript" src="../../script/apiCloud.js"></script>
<script type="text/javascript" src="../../script/public.js"></script>
<script type="text/javascript" src="../../script/echo.min.js"></script>
<script type="text/javascript">
    var RANd;
    apiready = function(){
        RANd = api.pageParam.Rand
        document.getElementById('text-box').value=RANd;
        var but = document.getElementById('but');
        but.setAttribute("disabled", true);
        but.style.background = "#F8F8F8";
        but.style.color = "#999";
    }
    function lst(self){
        $(self).on('input propertychange', function(event) {
            if(  RANd == $(self).val()){
                var but = document.getElementById('but');
                but.setAttribute("disabled", true);
                but.style.background = "#F8F8F8";
                but.style.color = "#999";
            }
            else{
                var but = document.getElementById("but");
                but.removeAttribute("disabled");
                but.style.background = "#5AC8E1";
                but.style.color = "#fff";
            }
        })
    }
    //个人介绍
    function refer(){
        var textCount=document.getElementById('text-box').value;
        api.execScript({
            name:"myInformation",
            frameName:'myInformation_body',
            script: 'introduction('+JSON.stringify(textCount)+')'
        })
        closeWin();
    }
</script>
</html>
