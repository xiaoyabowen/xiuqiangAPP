        function secondTime(second){
			var s = second;
			s= parseInt(s.substring(0, s.indexOf('.')))
			if(s > 59){
				if(s == 60){
					time = "01 : 00";
				}else{
					var m = parseInt(s / 60);
					s = parseInt(s % 60);
					if(m > 9 ){
						if(s > 9){
							time = m+" : "+s;
						}else{
							time = m+" : 0"+s;
						}
					}else{
						if(s > 9){
							time = "0" + m + " : " + s;
						}else{
							time ="0" + m + " : 0" + s;
						}
					}
				}
			}else{
				if(s>9){
					time = "00 : "+s;
				}else{
					time = "00 : 0"+s;
				}
			}
		}

