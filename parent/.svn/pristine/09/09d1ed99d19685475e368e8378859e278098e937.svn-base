<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link rel="stylesheet" href="../../css/api.css">
    <link rel="stylesheet" href="../../css/commonWindow.css">
    <title>班级老师</title>
    <style>
    	html,body{
    		min-width:320px;
    		height: 100%;
    		background: #F8F8F8;
    	}
		.top-slide{
			width:100%;
			overflow: hidden;
			overflow-x: scroll;
    		box-sizing: border-box;
		}
		.top-slide::-webkit-scrollbar{
			display:none;
		}
    	.top{
			padding:12px 14px;						
			display: -webkit-box;
			display: -mz-flexbox;
			display: flex;
			justify-content: space-between;
			flex-wrap: nowrap;
			box-sizing: border-box;
    	}
    	.top li{
    		text-align: center;
			border-radius: 8px;
			box-sizing: border-box;			
    	}
		.top li>:nth-child(1){
			position:relative;
			width:100%;
			height:0;
			padding-bottom:100%;
        }
		.top li>:nth-child(1)>:nth-child(1){
			display:block;
			position: absolute;
			width:100%;
			height:100%;
			top:0;
			bottom:0;
			border-radius:8px; 
			text-align: center;
			font-size: 12px;
			color: #FFFFFF;
			letter-spacing: 0.25px;
			padding-top:70%;
			box-sizing: border-box;
        }
		.top>:nth-child(1){
            background: #5AC8E1;
        }
		.top>:nth-child(2){
            background: #92CA55;
        }
		.top>:nth-child(3){
            background: #31CACF;
        }
		.top>:nth-child(4){
            background: #67C49C;
        }
		.top>:nth-child(5){
            background: #5AC8E1;
        }
		.top>:nth-child(1){
			background-image:url('../../icon/sicon.png');
			background-size:40% 40%;
			background-repeat:no-repeat;
			background-position: center 35%; 
		}
		.top>:nth-child(2){
			background-image:url('../../icon/fwsb.png');
			background-size:40% 40%;
			background-repeat:no-repeat;
			background-position: center 35%; 
		}
		.top>:nth-child(3){
			background-image:url('../../icon/mzsp.png');
			background-size:40% 40%;
			background-repeat:no-repeat;
			background-position: center 35%; 
		}
		.top>:nth-child(4){
			background-image:url('../../icon/mzpy.png');
			background-size:43% 43%;
			background-repeat:no-repeat;
			background-position: center 35%; 
		}
		.top>:nth-child(5){
			background-image:url('../../icon/health.png');
			background-size:43% 43%;
			background-repeat:no-repeat;
			background-position: center 35%; 
		}
		.key-indicator{
			width:100%;
			height:181px;
			padding-left:8px;
			padding-right:8px;
			box-sizing: border-box;
		}
		.ki{
			width:100%;
			height:100%;
        	background: #FFFFFF;
			box-shadow: 0 2px 4px 0 #CDE3E9;
			border-radius:8px;
			box-sizing: border-box;			
		}
		.class-info{
			width:100%;
			padding-left:8px;
			padding-right:8px;
			margin-top:13px;
			padding-bottom:33px;			
			box-sizing: border-box;
		}
		.ci{
			width:100%;
        	background: #FFFFFF;
			box-shadow: 0 2px 4px 0 #CDE3E9;
			border-radius:8px;
			box-sizing: border-box;
			padding-bottom:18px;
		}
        .keyTitle,.teachers,.students{
        	width: 100%;
        	font-size: 14px;
			color: #333333;
			padding-top:8px;
			padding-left:18px;
			letter-spacing: -1.42px;
        	background: #FFFFFF;
			border-radius:8px;						
			box-sizing: border-box;						
        }
		.students{
			padding-top:13px;
		}
        .con{
        	width: 100%;
        	height: 181px;
			padding-top:20px;
        	background: #FFFFFF;
			border-radius:4px;
			box-sizing: border-box;
        }
        .con li{
        	float: left;
        	width: 50%;
			text-align: center;
			position: relative;
			box-sizing: border-box;
        }
		.od-border,.mc-border{
			width:224px;
			height:224px;
			margin:0 auto;
			background: #FFFFFF;
			border-radius:50%;
			text-align: center;
			box-shadow: 0 2px 6px 0 #CDE3E9;
			position: relative;
			zoom:0.5;
		}
		#on-duty,#morning-check{
			position:absolute;
			left:0px;
		}
		.od-title{
			font-size: 12px;
			color: #A4A4A4;
			margin-top:12px;
		}
		.mc-title,.od-title{
			font-size: 12px;
			color: #5EC4E0;
			margin-top:12.5px;
			text-decoration:underline;			
		}
		.teacher-list,.students-list{
			width:100%;
			background: #FFFFFF;
			padding-left:12px;
			padding-right:12px;
			border-radius:8px;
			box-sizing: border-box;
		}
		.teacher-list li,.students-list li{
			width:100%;
			/* height:58px; */
			border-bottom:1px solid #F2F2F2;
			padding-top:10px;
			padding-left:6px;
			padding-right:6px;
			line-height: 38px;
			box-sizing: border-box;
			background-image:url('../../icon/teacherinfo.png'); 
			background-size:16px 16px; 
			background-repeat:no-repeat;
			background-position:right  center;
		}
		.teacher-list li{
			height:53px;position: relative;
		}
		.students-list li{
			height:54px;
		}
		.teacher-list li .fl-item,.students-list li .fl-item{
			float:left;
		}
		.teacher-list li span{display:block;width:26px;height:25px;position:absolute;top:50%;margin-top:-12px;right:21px;}
		.teacher-list li span img{width:100%;height:100%;}
		.t-avatar,.s-avatar{
			width:36px;
			height:36px;
			overflow: hidden;
			border-radius:50%;
		}
		.t-avatar>img,.s-avatar>img{
			/*width:36px;
			height:36px;*/
			display: block;
			border-radius:50%;
		}
		.t-name,.s-name{
			font-size: 14px;
			color: #666666;
			margin-left:8px;
		}		
		.itemOn{
			background: #f4f4f4;
		}
    </style>
</head>
<body>
<div class="class-info">
   <div class="ci">
	  <div class="teachers">班级老师</div>
	  <ul class="teacher-list" id="TeacherList">
	  </ul>
   </div>
</div>
    <script type="text/javascript" src="../../script/api.js"></script>
	<script type="text/javascript" src="../../script/mui.min.js"></script>
	<script type="text/javascript" src="../../script/util.js"></script>
	<script type="text/javascript" src="../../script/kv.js"></script>
    <script type="text/javascript" src="../../script/apiCloud.js"></script>
	<script type="text/javascript" src="../../script/init.js"></script>
	<script type="text/javascript" src="../../script/public.js"></script>
	<script type="text/javascript" src="../../script/user.js"></script>
	<script type="text/javascript" src="../../script/template-native.js"></script>
    <script type="text/javascript" src="../../script/data.js"></script>
<script type="text/html" id="TeacherHtml">
	<%for(var i=0;i<list.length;i++){%>
		<li>
			<div class="t-avatar fl-item" onclick="JumpTeacherDetails('<%=list[i].id%>','<%=list[i].name%>')">
				<img src="<%=list[i].icon%>" style="<%=list[i].style%>" onerror="this.src='../../image/teacherWang.png'" alt="" />
			</div>
			<div  onclick="JumpTeacherDetails('<%=list[i].id%>','<%=list[i].name%>')" class="t-name fl-item"><%=list[i].name%></div>
			<span style="right:67px;" onclick="openCall('<%=list[i].phone%>')"><img src="../../icon/phonehs.png" alt=""/></span>
			<span onclick="openUserChat('<%=list[i].chatId%>','<%=list[i].name%>','<%=list[i].id%>')"><img src="../../icon/message.png" alt=""/></span>
		</li>
	<%}%>
</script>
    <script>
    	var allResults = {};
		apiready=function(){
//			alert(JSON.stringify(getUserInfo()));
			var cid = getUserInfo().cids[0];
			//老师列表
			ajaxGet(clazzgetAllTeacher,{cid:10161},function(ret,err){
				if(ret.success == true){
					for(var i=0;i<ret.data.length;i++){
						allResults[ret.data[i].id] = ret.data[i];
						if(ret.data[i].icon){
							var width = 36;
							var height = 36;
							var obj = getImgByThisSize(ret.data[i].icon,width,height);
							ret.data[i].style = obj.style;
						}
					}
					var data = {list: ret.data};
					var html = template("TeacherHtml",data);
					document.getElementById('TeacherList').innerHTML = html;
					api.parseTapmode();
				}
			})
		}
		//跳转老师详情
		function JumpTeacherDetails(id,name){ 	
			openNewWindow("teacherHomepage","../babyHealth/teacherHomepage.html",{id:id,name:name});
		}
		
		
		function openUserChat(chatId,name,id){ 
			//先要通知原生  告知这个人要聊天了
	        api.accessNative({
			    name: "openChat",
			    extra: {
			        key: {
			        	id : chatId,
			        	name : name,
			        	icon : allResults[id].icon||""
			        }
			    }
			    
			}, function(ret, err) {
			    
			});
		}
    </script>
</body>
</html>