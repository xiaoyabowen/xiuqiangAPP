    <script id="scriptDiv1" type="text/html">
    	<div class="clockin-detail">
	        <ul>
	            <li class="late">
	                <div class="late-num"><%=list.lateNum%></div>
	                <div>迟到</div>
	            </li>
	            <li class="leave-early">
	                <div class="le-num"><%=list.leaveEarlyNum%></div>
	                <div>早退</div>
	            </li>
	            
	            <li class="leave">
