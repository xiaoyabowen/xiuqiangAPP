<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <title>修改密码</title>
    <link rel="stylesheet" href="../../css/api.css" />
    <style type="text/css">
        .setphone_m{
            width: 100%;
            min-width: 320px;
            margin-top: 10px;
        }
        .setphone_m form{
            font-size: 16px;
            padding: 0 5%;
        }
        .setphone_m form ul{
            /*width:339px;*/
            /*height:202px;*/
            background: #FFFFFF;
            box-shadow: 0 0 6px 0 rgba(94,196,224,0.30);
            padding:0 0 12px 0;
        }
        .setphone_m form ul li{
            border:none;
        }
        .setphone_m form input{
            padding: 32px 0 12px ;
            outline: none;
            margin: 0 6% 0 0;
            box-sizing: border-box;
            font-family: PingFangSC-Regular;
            font-size: 14px;
            color: #999999;
            width:57%;
            border-bottom: 1px solid #D7D7D7;
            letter-spacing: 0.19px;
        }
        .setphone_m form .newstel span{
            display: block;
            float: left;
            padding: 32px 0px 12px 14px;
            vertical-align: middle;
            font-family: PingFangSC-Regular;
            font-size: 17px;
            color: #333333;
            letter-spacing: 0.23px;
        }
        .setphone_m form .newstel input{
            float: right;
            line-height: normal;
            vertical-align: middle;
        }
        .setphone_m form .newstel p{
            float: right;
            line-height: normal;
            vertical-align: middle;
            font-size: 12px;
            color: #999;
            /*margin-right: 30px;*/
            padding: 12px 0 12px ;
            outline: none;
            margin: 0 6% 0 0;
            width:57%;
            /*border-bottom: 1px solid #D7D7D7;*/
            letter-spacing: 0.19px;
        }
        .setphone_m form .passcode{
            margin-left: 93px;
            border: none;
            position:relative;
        }
        .setphone_m form .passcode a{
            display: block;
            float: right;
            /*padding: 32px 12px 12px 15px;*/
            vertical-align: middle;
            position:absolute;
            top:6px;
            right:40px;
            width:79px;
            height:28px;
            background: #5AC8E1;
            border-radius: 4px;
            font-family: PingFangSC-Regular;
            font-size: 12px;
            color: #FFFFFF;
            letter-spacing: 0;
            line-height: 28px;
            text-align: center;
        }
        .setphone_m form .passcode input{
            float: left;
            padding: 12px 0 12px 0;
            margin:0;
            overflow: hidden;
        }
        .setphone_m form .userpwd img{
            display: block;
            float: left;
            width: 19px;
            height: 19px;
            padding: 29px 12px 12px 20px;
            vertical-align: middle;
        }
        .setphone_m form .userpwd input{
            float: left;
            padding-left: 15px;
            width: 50%;
            overflow: hidden;
        }
        .setphone_m form .submitbar{
            width:339px;
            height:44px;
            line-height: 44px;
            text-align: center;
            margin:20px auto 0;
            background: #5AC8E1;
            box-shadow: 0 2px 4px 0 rgba(90,200,225,0.30);
            border-radius: 4px;
            font-family: PingFangSC-Regular;
            font-size: 16px;
            color: #FFFFFF;
            letter-spacing: 0.22px;
        }
        .itemOn{
            background: #f4f4f4;
        }
    </style>
</head>
<body>
<div class="setphone_m">
    <form>
        <ul>
            <li class="newstel" >
                <span>账号</span>
                <input id="telPhone" type="number" placeholder="填写手机号" class=""/>
                <div style="clear: both;"></div>
            </li>
            <li class="newstel" >
                <span>原密码</span>
                <input id="rawPassword" type="number" placeholder="填写原密码" class=""/>
                <div style="clear: both;"></div>
            </li>
            <li class="newstel" >
                <span>新密码</span>
                <input id="newPassword" type="number" placeholder="填写新密码" class=""/>
                <div style="clear: both;"></div>
            </li>
            <li class="newstel" >
                <span>确认新密码</span>
                <input id="affirmNewPassword" type="number" placeholder="填写新密码" class=""/>
                <div style="clear: both;"></div>
            </li>
            <li class="newstel" >
                <span></span>
                <p>密码必须是8-16位数字，字符组合</p>
                <div style="clear: both;"></div>
            </li>
        </ul>
        <div tapmode="itemOn" onclick="updatePhone()" class="submitbar">
            保存
        </div>
    </form>
</div>
</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/mui.min.js"></script>
<script type="text/javascript" src="../../script/util.js"></script>
<script type="text/javascript" src="../../script/kv.js"></script>
<script type="text/javascript" src="../../script/user.js"></script>
<script type="text/javascript" src="../../script/apiCloud.js"></script>
<script type="text/javascript" src="../../script/public.js"></script>
<script type="text/javascript" src="../../script/template-native.js"></script>
<script type="text/javascript" src="../../script/data.js"></script>
<script>
    apiready=function () {


    }

    function updatePhone() {
        var telPhone=$api.byId('telPhone').value;
        var rawPassword=$api.byId('rawPassword').value;
        var newPassword=$api.byId('newPassword').value;
        var affirmNewPassword=$api.byId('affirmNewPassword').value;
//        alert(telPhone)
        if(telPhone==""){
            toast("请输入手机号！");
            return;
        }
        if(rawPassword==""){
            toast("请输入原密码！");
            return;
        }
        if(newPassword==""){
            toast("请输入新密码！");
            return;
        }
        if(affirmNewPassword==""){
            toast("请输入确认新密码！");
            return;
        }
        if(newPassword != affirmNewPassword){
            toast("新密码与确认新密码不一致！")
        }
        ajaxGet(updatePasswordAndLoginUrl,{oldPassword:rawPassword,phone:telPhone,password:affirmNewPassword},function (ret,err) {
            if(ret && ret.success){
                toast("修改成功");
                setTimeout(function () {
                    closeWin()
                },300)
            }else if(ret.success==false){
                toast(ret.msg)
            }else{
                toast(ret.msg)
            }
        })
    }
</script>
</html>
