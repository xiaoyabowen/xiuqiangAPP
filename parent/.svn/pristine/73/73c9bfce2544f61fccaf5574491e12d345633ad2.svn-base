<script>
    var schoolTeacherListUrl = serverUrl + "/leave/schoolTeacherList";
    apiready = function(){
        var userInfo = getUserInfo();
        var uid =parseInt(getUserInfo().cids[0]);

        new datalistModel(addDataToHtml,clazzPersonChildList ,{status:2,uid:uid},10,5,100,true);
    }


    function addDataToHtml(results,append){
        for (var i = 0; i < results.length; i++) {
            results[i].startTime = formatTimeToDate(results[i].startTime).split(" ")[0];
            results[i].endTime = formatTimeToDate(results[i].endTime).split(" ")[0];
        }
        var data = {list: results};
        var html = template('scriptDiv1',data);
        if (append) {
            var div = document.createElement("div");
            div.innerHTML = html;
            document.getElementById('list').appendChild(div);
        } else {
            document.getElementById('list').innerHTML = html;
        }
        document.getElementById("body").style.display = "block";
    }



    //打开聊天  传过来的是宝宝的id
    function openUserChat(icon,chatId,userName){
        //先要通知原生  告知这个人要聊天了
        api.accessNative({
            name: "openChat",
            extra: {
                key: {
                    icon : icon || "",
                    id : chatId,
                    name : userName||""
                }
            }

        }, function(ret, err) {

        });
    };
</script>
