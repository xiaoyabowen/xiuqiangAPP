<script type="text/html" id="detailTm">
	<div id="main">
		<%=list.ext%>
	</div>
	<div class="detailbox">
		<div class="bottom_tag">
			<%if(list.shareStatus==1){%>
			<span class="">可以分享</span>
			<%}else if(list.shareStatus==0){%>
			<span style="display: none">可以分享</span>
			<%}%>
			<%if(list.sign==1){%>
			<span class="">需要签收</span>
			<%}else if(list.sign==0){%>
			<span style="display: none">需要签收</span>
			<%}%>
			<span class=""><%=list.teacherName%>发布于<em><%=list.ctime%></em></span>
		</div>
		<%if(list.sign==0){%>
		<div class="confirm1">
			不需要签收
		</div>
		<%}else if(list.sign==1){%>
		<div class="confirm" onclick="notarize(this,<%=list.nid%>)">
			未签收
		</div>
		<%}else if(list.sign==2){%>
		<div class="confirm1">
			已签收
		</div>
		<%}%>
	</div>
</script>
<script>
	var nid;
	apiready=function () {
		nid=api.pageParam.nid;
		ajaxGet(getNoticeDetail,{nid:nid},function (ret,err) {
			if(ret && ret.success){
				if(ret.data.imagesJson){
					ret.data.imagesJson=tryJsonParse(ret.data.imagesJson);
					var imgObj=[]
					for(var i=0;i<ret.data.imagesJson.length;i++){
						var width =api.winWidth;
						var height = 200;
						var obj = getImgSizeBySize(ret.data.imagesJson[i],width,height);
//                        ret.data.style = obj[i].style;
						imgObj.push(obj);
					}
					ret.data.imagesJson=imgObj
				}
				ret.data.ctime=formatTimeToDate(ret.data.ctime);
//                    alert(JSON.stringify(ret.data))
				var data={list:ret.data};
				var html=template("detailTm",data);
				document.getElementById("mains").innerHTML=html;
				setTimeout(function(){
					echoExt.init({
						offset: 0,
						throttle: 0//设置图片延迟加载的时间
					});
				},100)
			}
		})
	}
	var tag=true;
	function notarize(self,id) {
		if(tag){
			ajaxGet(signForNotice,{nid:id},function (ret,err) {
				if(ret && ret.success){
					$(self).attr("class","confirm1");
					$(self).html("已签收");
					toast("已签收!");
					tag=false;
				}else {
					toast(ret.msg);
				}
			})
		}else{
			toast("您已经签收了 ！");
		}
	}
</script>
