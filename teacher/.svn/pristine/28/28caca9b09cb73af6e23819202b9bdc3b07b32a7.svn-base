<script type="text/html" id="phoneTm">
    <%for(var i=0;i<list.length;i++){%>
    <li class="interleaveColor">
        <div class="phone_box">
            <div class="images">
                <!--<img src="../../image/fcoushead.png" style="width:100%;height:100%;" data-echo="<%=list[i].imgpath%>" real-style="<%=list[i].style%>"  alt="" />-->
