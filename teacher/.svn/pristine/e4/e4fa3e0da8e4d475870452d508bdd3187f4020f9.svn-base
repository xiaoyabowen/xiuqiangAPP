<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no" />
    <link rel="stylesheet" href="../../css/api.css">
    <link rel="stylesheet" href="../../css/commonWindow.css">
    <title>宝宝健康-记录晨检</title>
    <style>
        body{
            z-index: 1;
        }
        .record-list{
            width:100%;
            padding:12px 18px;
            box-sizing: border-box;
        }
        .record-list>li{
            width:100%;
            height:35px;
            border:1px solid #D7D7D7;
            border-radius:4px;
            font-size:14px;
            padding-left:10px;
            position:relative;
            padding-top:7px;
            box-sizing: border-box;
        }
        .record-list>:not(:nth-child(1)){
            margin-top:12px;
        }
        .left-tag{
            width:81px;
            height:100%;
            padding-left:10px;
            padding-top:5px;
            position:absolute;
            left:0;
            top:0;
            box-sizing: border-box;
        }
        .left-tag>div{
            width:100%;
            height:23px;
            padding-top:2px;
            border-right:1px solid #D7D7D7;
            box-sizing: border-box;
        }
        .right-text{
            width:100%;
            height:100%;
            padding-left:80px;
            box-sizing: border-box;
        }
        .c1{
            color:#666666;
        }
        .c2{
            color:#333333;
        }
        .remark{
            width:100%;
            padding-right:10px;
            box-sizing: border-box;
        }
        .yc{
            display:none;
        }
        .remark>input{
            width:100%;
            font-size:14px;
            color:#999999;
            line-height:normal;
        }
        .save{
            width:90.4%;
            height:44px;
            margin:12px auto 0;
            background: #5ac8e1;
            text-align: center;
            line-height: 44px;
            font-size:16px;
            color:#FFFFFF;
            border-radius:4px;
            box-shadow: 0 2px 4px 0 rgba(90,200,225,0.30);
            box-sizing: border-box;
        }
        .open-list{
            width:9px;
            position:absolute;
            right:11px;
            top:8px;
        }
        .drop-list{
            width:125px;
            /* height:83px; */
            background: #FFFFFF;
            box-shadow: 0 0 6px 0 rgba(90,200,225,0.30);
            border-radius: 4px;
            position:absolute;
            right:-1px;
            margin-top:6px;
            padding:13px 12px 0px;
            z-index: 2;
            box-sizing: border-box;
        }
        .drop-list::before {
            content: '';
            position: absolute;
            top: -5px;
            left: 85%;
            margin-left: -6px;
            width: 0px;
            height: 0px;
            border-left: 10px solid transparent;
            border-right: 10px solid transparent;
            border-bottom: 6px solid #fff;
            /* filter: blur(1px); */
            z-index: 3;
        }
        .drop-list ul li{
            font-size:14px;
            color: #666666;
            letter-spacing: 0.19px;
            margin-bottom:13px;
        }
        .Healthy input{width:100%;}
        .drop-list{display:none}
    </style>
</head>
<body>
<div id="PperformanceList">

</div>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/mui.min.js"></script>
<script type="text/javascript" src="../../script/user.js"></script>
<script type="text/javascript" src="../../script/jquery-1.8.1.min.js"></script>
<script type="text/javascript" src="../../script/util.js"></script>
<script type="text/javascript" src="../../script/kv.js"></script>
<script type="text/javascript" src="../../script/apiCloud.js"></script>
<script type="text/javascript" src="../../script/init.js"></script>
<script type="text/javascript" src="../../script/template-native.js"></script>
<script type="text/javascript" src="../../script/data.js"></script>
<script type="text/javascript" src="../../script/public.js"></script>
<script type="text/html" id="PperformanceHtml">

    <ul class="record-list">
        <li class="c1">
            <div>晨检</div>
        </li>
        <li class="c1">
            <div id="actionTime"></div>
        </li>
        <li class="c1">
            <div class="left-tag">
                <div>检查老师</div>
            </div>
            <div class="right-text" ><%=list.teacherName%></div>
        </li>
        <%if(list.temperatureStatus==0){%>
        <li class="c2 drop-down twlist">
            <div class="left-tag">
                <div>体温</div>
            </div>
            <div class="right-text" id="tw">未见异常</div>
            <img onclick="controlexplicithidden(this)" class="open-list" src="../../icon/switch.png" alt="">
            <div class="drop-list">
                <ul>
                    <li onclick="NoAbnormal(this)">未见异常</li>
                    <li onclick="YesAbnormal(this)">发现异常</li>
                </ul>
            </div>
        </li>
        <%}else{%>
        <li class="c2 drop-down twlist">
            <div class="left-tag">
                <div>体温</div>
            </div>
            <div class="right-text" id="tw">发现异常</div>
            <img onclick="controlexplicithidden(this)" class="open-list" src="../../icon/switch.png" alt="">
            <div class="drop-list">
                <ul>
                    <li onclick="NoAbnormal(this)">未见异常</li>
                    <li onclick="YesAbnormal(this)">发现异常</li>
                </ul>
                <li class="remarks"><input type='text' placeholder='异常备注' value="<%=list.temperatureAnomalies%>"></li>
            </div>
        </li>
        <%}%>
        <%if(list.oralStatus==0){%>
        <li class="c2 drop-down kqlist">
            <div class="left-tag">
                <div>口腔</div>
            </div>
            <div class="right-text" id="kq">未见异常</div>
            <img onclick="controlexplicithidden(this)" class="open-list" src="../../icon/switch.png" alt="">
            <div class="drop-list">
                <ul>
                    <li onclick="NoAbnormal(this)">未见异常</li>
                    <li onclick="YesAbnormal(this)">发现异常</li>

                </ul>
            </div>
        </li>
        <%}else{%>
        <li class="c2 drop-down kqlist">
            <div class="left-tag">
                <div>口腔</div>
            </div>
            <div class="right-text" id="kq">发现异常</div>
            <img onclick="controlexplicithidden(this)" class="open-list" src="../../icon/switch.png" alt="">
            <div class="drop-list">
                <ul>
                    <li onclick="NoAbnormal(this)">未见异常</li>
                    <li onclick="YesAbnormal(this)">发现异常</li>

                </ul>
                <li class="remarks"><input type='text' placeholder='异常备注' value="<%=list.oralAnomalies%>"></li>
            </div>
        </li>
        <%}%>
        <%if(list.fingernailStatus==0){%>
        <li class="c2 drop-down zjlist">
            <div class="left-tag">
                <div>指甲</div>
            </div>
            <div class="right-text" id="zj">未见异常</div>
            <img onclick="controlexplicithidden(this)" class="open-list" src="../../icon/switch.png" alt="">
            <div class="drop-list">
                <ul>
                    <li onclick="NoAbnormal(this)">未见异常</li>
                    <li onclick="YesAbnormal(this)">发现异常</li>
                </ul>
            </div>
        </li>
        <%}else{%>
        <li class="c2 drop-down zjlist">
            <div class="left-tag">
                <div>指甲</div>
            </div>
            <div class="right-text" id="zj">发现异常</div>
            <img onclick="controlexplicithidden(this)" class="open-list" src="../../icon/switch.png" alt="">
            <div class="drop-list">
                <ul>
                    <li onclick="NoAbnormal(this)">未见异常</li>
                    <li onclick="YesAbnormal(this)">发现异常</li>
                </ul>
                <li class="remarks"><input type='text' placeholder='异常备注' value="<%=list.fingernailAnomalies%>"></li>
            </div>
        </li>
        <%}%>
        <li class="Healthy">
            <input class="Healthyaa" type="text" placeholder="健康情况备注" value="<%=list.summarize%>">
        </li>
    </ul>
    <div class="save" onclick="Record()">保存</div>
</script>
<script>
var id,uid,sid,cid,buid,temperatureStatus,temperatureAnomalies,oralStatus,oralAnomalies,fingernailStatus,fingernailAnomalies,summarize,day;
apiready=function(){
    ajaxGet(getDayCheck,{id:api.pageParam.ID},function(ret,err){

        id = ret.data.id;
        uid = ret.data.uid;
        sid = ret.data.sid;
        cid = ret.data.cid;
        buid = ret.data.buid;
        if(ret.data){
            for(var i=0;i<ret.data.length;i++){
                ret.data[i].utime = formatTimeToDay(ret.data[i].utime)
            }
            var data = {list: ret.data};
            var html = template("PperformanceHtml",data);
            document.getElementById('PperformanceList').innerHTML = html;
             date =ret.data.ctime;
            var s = document.getElementById("actionTime").innerHTML = formatTimeToAlls(date);


        }
    });
};

 function Record(){
     if($("#tw").html() == "未见异常"){
         temperatureStatus = 0;
         temperatureAnomalies = "";
     }else if($("#tw").html() == "发现异常"){
         temperatureStatus = 1;
         temperatureAnomalies = $(".twlist").next().children().val();
     }
     if($("#kq").html() == "未见异常"){
         oralStatus = 0;
         oralAnomalies = "";
     }else if($("#kq").html() == "发现异常"){
         oralStatus = 1;
         oralAnomalies = $(".kqlist").next().children().val();
     }
     if($("#zj").html() == "未见异常"){
         fingernailStatus = 0;
         fingernailAnomalies = "";
     }else if($("#zj").html() == "发现异常"){
         fingernailStatus = 1;
         fingernailAnomalies = $(".zjlist").next().children().val();
     }
     summarize = $(".Healthyaa").val();
     var day = parseInt($("#actionTime").html());
     var obj ={ };
     obj.id = id;
     obj.uid = uid;
     obj.sid = sid;
     obj.day = day;
     obj.cid = cid;
     obj.buid = buid;
     obj.temperatureStatus = temperatureStatus;
     obj.temperatureAnomalies = temperatureAnomalies;
     obj.oralStatus = oralStatus;
     obj.oralAnomalies = oralAnomalies;
     obj.fingernailStatus = fingernailStatus;
     obj.fingernailAnomalies = fingernailAnomalies;
     obj.summarize = summarize;
     obj.status = 0;
     obj.index=0;
     ajaxGet(updateDayCheck,obj,function(ret,err){
                if(ret){
             if(ret.success == true){

                 toast("修改成功！");
                 api.execScript({
                     name:"everydayHealthExam",
                     frameName:"everyday-exam",
                     script:"apiready()"
                 });
                 setTimeout("closeWin()",1000);
             }else{
                 toast("记录失败，请检查网络重新记录！")
             }
         }else{
             toast("记录失败，请检查网络重新记录！")
         }
     })
}
function controlexplicithidden(self){
    $(self).next().slideToggle();
    $(self).parent().siblings().children(".drop-list").css("display","none");
}
//未见异常
function NoAbnormal(self){
    var actionText = $(self).html();
    $(self).parent().parent().css("display","none");
    $(self).parent().parent().parent().find(".right-text").html(actionText);
    $(self).parent().parent().parent().next(".remark").remove();
    $(self).parent().parent().parent().next(".remarks").remove();
}
//发现异常
function YesAbnormal(self){
    var actionText = $(self).html();
    $(self).parent().parent().css("display","block");
    $(self).parent().parent().parent().find(".right-text").html(actionText);
    $(self).parent().parent().parent().next(".remark").remove();
    $(self).parent().parent().parent().after("<li class='remark'><input type='text' placeholder='异常备注'></li>")
}
</script>
</body>
</html>
