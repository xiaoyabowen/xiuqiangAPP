<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<title>教学管理</title>
	<link rel="stylesheet" href="../../css/api.css" />
	<link rel="stylesheet" href="../../css/commonWindow.css" />
	<style type="text/css">
		body{
			min-width: 320px;
			background: #F8F8F8;
		}
		.nav-list{
			width:100%;
			height:66px;
			padding:12px 8px;
			box-sizing: border-box;
		}
		.nav-list .nav-info{
			width:100%;
			height:42px;
			border-radius:4px;
			box-sizing: border-box;
			background: #FFFFFF;
		}
		.nav-list .nav-info .selected{
			color:#5AC8E1 !important;
			background: url('../../icon/selected-bg.png');
			background-repeat:no-repeat;
			background-position:center bottom;
		}
		.nav-list .nav-info .fl-item{
			width:25.00%;
			height:42px;
			float:left;
			color: #A3A3A3;
			box-sizing: border-box;
		}
		.nav-list .nav-info .fl-item>:nth-child(1){
			width:100%;
			height:30px;
			line-height: 30px;
			margin-top:6px;
			text-align: center;
			font-size: 16px;
			box-sizing: border-box;
		}
		.nav-list .nav-info .written-comment>:nth-child(1){
			border-left: 1px solid #F0F0F0;
			border-right: 1px solid #F0F0F0;
		}

	</style>
</head>
<body>
<div id="topbar" >
	<div id="leftButton" tapmode="itemOn" onclick="closeWin()">
		<img style="width:30px;height:30px;" src="../../icon/back.png">
	</div>
	<div id="teachingManagement">教学管理</div>
	<div class="right" onclick="addCourse()"><img style="width: 20px;height: 20px;" src="../../icon/addicon.png"/></div>
</div>
<div class="nav-list">
	<div class="nav-info">
		<div class="all-comment fl-item selected" onclick="switchFrameGroupIndex(0)">
			<div>课程</div>
		</div>
		<div class="written-comment fl-item" onclick="switchFrameGroupIndex(1)">
			<div>视频</div>
		</div>
		<div class="unwritten-comment fl-item" onclick="switchFrameGroupIndex(2)">
			<div>照片</div>
		</div>
		<div class="unwritten-comment fl-item" style="border-left: 1px solid #F0F0F0;" onclick="switchFrameGroupIndex(3)">
			<div>文档</div>
		</div>
	</div>
</div>
</body>
<script type="text/javascript" src="../../script/api.js"></script>
<script type="text/javascript" src="../../script/mui.min.js"></script>
<script type="text/javascript" src="../../script/util.js"></script>
<script type="text/javascript" src="../../script/kv.js"></script>
<script type="text/javascript" src="../../script/apiCloud.js"></script>
<script type="text/javascript" src="../../script/public.js"></script>
<script type="text/javascript" src="../../script/template-native.js"></script>
<script type="text/javascript" src="../../script/data.js"></script>
<script>
	var studyName;
	var pathId;
	var typeTeach;
	var pathType;
    apiready = function () {
        studyName=api.pageParam.name;
        pathId=api.pageParam.id;
        typeTeach=api.pageParam.type;
		pathType = api.pageParam.pathTypes
        $api.byId("teachingManagement").innerHTML=studyName;
        var strDM = api.systemType;//系统
        var strSV = parseFloat(api.systemVersion,10);//版本
//	        var titleHeight=0;
//	        if(strDM == 'ios' && strSV > 7){
//	           titleHeight=20
//	        }else if(strDM == 'android' && strSV >= 4.4){
//	           titleHeight = 25;
//	        }
        var titleHeight=0;
        if((strDM == 'ios' && strSV > 7)||(strDM == 'android' && strSV >= 4.4)){
            titleHeight=api.safeArea.top;
        }
        document.getElementById('topbar').style.paddingTop = titleHeight + 'px';
        document.getElementById('topbar').style.display = "block";
        var res = api.pageParam;
        window_width = api.winWidth;
        api.openFrameGroup ({
            name: 'allComments',
            background:'#fff',
            scrollEnabled:true,
            preload:4,
            rect : {
                x : 0,
                y : headHeight+titleHeight + 66,
                w : 'auto',
                h : api.winHeight-headHeight-titleHeight - 66
            },
            index:0,
            frames: [{
                name: 'teachMang1',
                url: 'myStudy_course_body.html',
                bgColor :'rgba(246,246,246,1)',
                pageParam:api.pageParam
            },{
                name: 'teachMang2',
                url: 'myStudy_video_body.html',
                bgColor :'rgba(246,246,246,1)',
                pageParam:api.pageParam
            },{
                name: 'teachMang3',
                url: 'myStudy_photo_body.html',
                bgColor :'rgba(246,246,246,1)',
                pageParam:api.pageParam
            },{
				name: 'teachMang4',
				url: 'myStudy_file_body.html',
				bgColor :'rgba(246,246,246,1)',
				pageParam:api.pageParam
                }
            ]
        }, function(ret, err){
            switchFrameCallback(ret.index);
        });
    };


    function switchFrameGroupIndex(index){
        _index = index;
        api.setFrameGroupIndex({
            name : "allComments",
            index : index,
            scroll : true//可以左右滑动
        });
    }


    function switchFrameCallback(index) {
//	        var width = (window_width / 3) * index;
        var spans_01 = document.querySelectorAll(".fl-item");
        for (var i = 0; i < spans_01.length; i++) {
            if (i == index) {
                spans_01[i].classList.add("selected")
                spans_01[i].style.color = "#505050";
            } else {
                spans_01[i].classList.remove("selected")
                spans_01[i].style.color = "#A3A3A3";
            }
        }
    }
	function addCourse() {
		openNewWindow('myStudyMeansRelease','./myStudyMeansRelease.html',{pathId:pathId,type:typeTeach,pathType:pathType})
    }


</script>
</html>
