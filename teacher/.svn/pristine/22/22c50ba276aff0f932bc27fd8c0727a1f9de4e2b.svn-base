<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1,user-scalable=no">
    	<meta name="apple-mobile-web-app-capable" content="yes">
    	<meta name="apple-mobile-web-app-status-bar-style" content="black">
		<title>精彩瞬间-待审核</title>
		<link rel="stylesheet" href="../../css/api.css" />
		<link rel="stylesheet" href="../../css/commonWindow.css" />
		<style type="text/css">
			body{
				min-width: 320px;
				background-color: #f8f8f8;
			}
			.nav-list{
	            width:100%;
	            height:66px;
	            padding:12px 8px;
	            box-sizing: border-box;
	        }
	        .nav-list .nav-info{
	            width:100%;
	            height:42px;
	            border-radius:4px;
	            box-sizing: border-box;
	            background: #FFFFFF; 
	        }
	        .nav-list .nav-info .selected{
	            background: url('../../icon/selected-bg.png');
	            background-repeat:no-repeat;
	            background-position:center bottom;  
	        }
	        .nav-list .nav-info .fl-item{
	            width:50.00%;
	            height:42px;
	            float:left;
	            color: #A3A3A3;
	            box-sizing: border-box;                        
	        }
	        .nav-list .nav-info .fl-item>:nth-child(1){
	            width:100%;
	            height:30px;
	            line-height: 30px;
	            margin-top:6px;
	            text-align: center;
	            font-size: 16px;
				border-right:1px solid #E8E7E7;
	            box-sizing: border-box;
	        }
	        .nav-list .nav-info .written-comment>:nth-child(1){
	            border-left: 1px solid #F0F0F0;
	            border-right: 1px solid #F0F0F0;
	        }
		</style>
	</head>
	<body>
		<div id="topbar" >
			<div id="leftButton" tapmode="itemOn" onclick="closeWin()">
				<img style="width:25px;height:25px;" src="../../icon/back.png">
			</div>
			<div id="examineName">美乐瞬间待审核</div>
		</div>
		<div class="nav-list">
            <div class="nav-info">
                <div class="all-comment fl-item selected" onclick="switchFrameGroupIndex(0)">
                    <div>待审核</div>
                </div>
                <div class="unwritten-comment fl-item" onclick="switchFrameGroupIndex(1)">
                    <div>被投诉</div>
                </div>
            </div>                    
        </div>
	</body>
	<script type="text/javascript" src="../../script/api.js"></script>
	<script type="text/javascript" src="../../script/mui.min.js"></script>
	<script type="text/javascript" src="../../script/util.js"></script>
	<script type="text/javascript" src="../../script/kv.js"></script>
	<script type="text/javascript" src="../../script/apiCloud.js"></script>
	<script type="text/javascript" src="../../script/public.js"></script>
	<script type="text/javascript" src="../../script/template-native.js"></script>
	<script type="text/javascript" src="../../script/data.js"></script>
	<script>
        apiready = function (){
			var strDM = api.systemType;//系统
	        var strSV = parseFloat(api.systemVersion,10);//版本
//	        var titleHeight=0;
//	        if(strDM == 'ios' && strSV > 7){
//	           titleHeight=20
//	        }else if(strDM == 'android' && strSV >= 4.4){
//	           titleHeight = 25;
//	        }
            var titleHeight=0;
            if((strDM == 'ios' && strSV > 7)||(strDM == 'android' && strSV >= 4.4)){
                titleHeight=api.safeArea.top;
            }

	        document.getElementById('topbar').style.paddingTop = api.safeArea.top + 'px';
	        document.getElementById('topbar').style.display = "block";
	       	var res = api.pageParam;
	        window_width = api.winWidth;
	        api.openFrameGroup ({
	            name: 'examines',
	            background:'#fff',
	            scrollEnabled:true,
	            preload:2,
	            rect : {
	                x : 0,
	                y : headHeight+api.safeArea.top + 66,
	                w : api.winWidth,
	                h : api.winHeight-headHeight-api.safeArea.top - 66
	            },
	            index:0,
	            frames: [{
	           		name: 'examine',
	                url: 'wonderfulTime_examine_body.html',       
	                bgColor :'rgba(246,246,246,1)',
	                pageParam:{type:0,index:1}
	            },{
	                name: 'complain',
	                url: 'wonderfulTime_complain_body.html',
	                bgColor :'rgba(246,246,246,1)',
	                pageParam:{type:2,index:0}
	            }
	           ]
	        }, function(ret, err){
				if(ret.index == 0){
					document.getElementById("examineName").innerHTML = "美乐瞬间待审核";
				}else{
					document.getElementById("examineName").innerHTML = "美乐瞬间被投诉";
				}
	            switchFrameCallback(ret.index);
	        });        
		};

		function switchFrameGroupIndex(index){
	        _index = index;
	        api.setFrameGroupIndex({
	            name : "examines",
	            index : index,
	            scroll : true//可以左右滑动
	        });
	    }
		
		
		function switchFrameCallback(index){
//	        var width = (window_width / 3) * index;
			var spans_01 = document.querySelectorAll(".fl-item");
	        for (var i = 0; i < spans_01.length; i++) {
	            if (i == index) {
	            	spans_01[i].classList.add("selected")
	                spans_01[i].style.color = "#5AC8E1";
	            } else {
	            	spans_01[i].classList.remove("selected")
	                spans_01[i].style.color = "#A3A3A3";
	            }
	        }
	    }
    </script>
</html>
